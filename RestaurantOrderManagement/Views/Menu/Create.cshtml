@model RestaurantOrderManagement.Models.MenuItem

@{
	ViewData["Title"] = "Create Menu Item";
}

<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-6 col-lg-4">
			<div class="card shadow-lg border-0 rounded-lg">
				<div class="card-header bg-success text-white text-center">
					<h2 class="mb-0">Create New Menu Item</h2>
				</div>
				<div class="card-body">
					<form asp-action="Create" method="post">
						<div class="form-group mb-3">
							<label for="Name" class="form-label">Name</label>
							<input type="text" name="Name" class="form-control" placeholder="Enter item name" required />
						</div>
						<div class="form-group mb-3">
							<label for="Price" class="form-label">Price</label>
							<input type="text" id="Price" name="Price" class="form-control" placeholder="Enter item price" required />
						</div>
						<div class="d-flex justify-content-between">
							<button type="submit" class="btn btn-primary">
								<i class="bi bi-save"></i> Create
							</button>
							<a class="btn btn-secondary" asp-action="Index">
								<i class="bi bi-x-circle"></i> Cancel
							</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
