@model RestaurantOrderManagement.Models.MenuItem

@{
    ViewData["Title"] = "Delete Menu Item";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-danger text-white text-center">
                    <h2 class="mb-0">Delete Menu Item</h2>
                </div>
                <div class="card-body">
                    <h4 class="text-center text-warning mb-4">Are you sure you want to delete this item?</h4>
                    <div class="text-center mb-3">
                        <h4 class="font-weight-bold">@Model.Name</h4>
                    </div>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>
                        <dt class="col-sm-4">Price</dt>
                        <dd class="col-sm-8">@string.Format("{0:C}", @Model.Price)</dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>
                    <a class="btn btn-secondary" asp-action="Index">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
