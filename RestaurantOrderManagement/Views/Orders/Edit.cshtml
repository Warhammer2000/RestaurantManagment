@model RestaurantOrderManagement.Models.Order

@{
	ViewData["Title"] = "Update Order";
}

<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-8 col-lg-6">
			<div class="card shadow-lg border-0 rounded-lg">
				<div class="card-header bg-warning text-white text-center">
					<h2 class="mb-0">Update Order</h2>
				</div>
				<div class="card-body">
					<form asp-action="Edit" asp-route-id="@Model.Id" method="post">

						<input type="hidden" name="Id" value="@Model.Id" />

						<div class="form-group mb-3">
							<label for="details" class="form-label">Details:</label>
							<input type="text" id="details" name="Details" value="@Model.Details" class="form-control" placeholder="Enter order details" />
						</div>

						<div class="form-group mb-3">
							<label for="status" class="form-label">New Status:</label>
							<input type="text" id="status" name="Status" value="@Model.Status" class="form-control" placeholder="Enter new status" />
						</div>

						<div class="text-center">
							<button type="submit" class="btn btn-primary">
								<i class="bi bi-save"></i> Update
							</button>
							<a asp-action="Index" class="btn btn-secondary mx-2">
								<i class="bi bi-arrow-left-circle"></i> Back to Orders
							</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
