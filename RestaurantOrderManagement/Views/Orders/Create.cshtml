@model RestaurantOrderManagement.Models.Order

@{
    ViewData["Title"] = "Create New Order";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-success text-white text-center">
                    <h2 class="mb-0">Create New Order</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="form-group mb-3">
                            <label for="Details" class="form-label">Order Details</label>
                            <input type="text" id="Details" name="Details" class="form-control" placeholder="Enter order details" />
                        </div>
                        <div class="form-group mb-3">
                            <label for="Status" class="form-label">Order Status</label>
                            <input type="text" id="Status" name="Status" class="form-control" placeholder="Enter order status" />
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Create
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Back to Orders
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
