@model RestaurantOrderManagement.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-danger text-white text-center">
                    <h2 class="mb-0">Delete Order</h2>
                </div>
                <div class="card-body">
                    <h4 class="text-center text-warning mb-4">Are you sure you want to delete this order?</h4>
                    <div class="text-center mb-3">
                        <h5 class="font-weight-bold">Order ID: @Model.Id</h5>
                    </div>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">Details</dt>
                        <dd class="col-sm-9">@Model.Details</dd>
                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            <span class="badge
                                @(Model.Status == "Pending" ? "bg-warning text-dark" :
                                  Model.Status == "Completed" ? "bg-success" :
                                  "bg-secondary")">
                                @Model.Status
                            </span>
                        </dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>
                    <a class="btn btn-secondary" asp-action="Index">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
