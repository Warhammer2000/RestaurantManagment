@model RestaurantOrderManagement.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-info text-white text-center">
                    <h2 class="mb-0">Order Details</h2>
                </div>
                <div class="card-body">
                    <h3 class="text-center mb-4">Order ID: @Model.Id</h3>
                    <p><strong>Details:</strong> @Model.Details</p>
                    <p>
                        <strong>Status:</strong>
                        <span class="badge
                            @(Model.Status == "Pending" ? "bg-warning text-dark" :
                              Model.Status == "Completed" ? "bg-success" :
                              "bg-secondary")">
                            @Model.Status
                        </span>
                    </p>
                    <p><strong>Created Date:</strong> @Model.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")</p> <!-- Добавлено отображение даты создания -->
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back to Orders
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
